<% include ./partials/header %>

<div class="container" style="margin-top:120px">
  <div class="row">
    <div class="col-md-2 col-sm-12">
      <div class="row">
        <h4 style="margin-bottom: 15px;">Refinar Busca</h4>
        <p style="margin-bottom: 10px;">Preço</p>
          <div class="input-group">
            <label>
              <input value="barato" class="form-group row" name="preco" class="row" type="radio"> Abaixo de R$ 15
            </label>
            <br>
            <label>
              <input value="medio" name="preco" class="form-group row" type="radio"> Entre R$ 15 e R$ 30
            </label>
            <br>
            <label>
              <input value="caro" name="preco" class="form-group row" type="radio"> Acima de R$ 30
            </label>
          </div>
        <p style="margin-top: 10px; margin-bottom: 10px;">Cor</p>
          <div class="input-group">
            <label>
              <input value="escura" class="form-group row" name="cor" class="row" type="radio"> Escura
            </label>
            <br>
            <label>
              <input value="branca" name="cor" class="form-group row" type="radio"> Branca
            </label>
            <br>
            <label>
              <input value="vermelho" name="cor" class="form-group row" type="radio"> Vermelha
            </label>
          </div>
      </div>
    </div>
    <div class="col-md-10 col-sm-12">
      <div class="row buscaDiv" style="margin-left: 2px; color: black;">
        <input type="text" class="busca" placeholder="Pesquisar cerveja">
        <input type="submit" name="Buscar" class="btn-group btn-sm" style="background-image: linear-gradient(to bottom,black 0, black 100%) !important; color: white !important; margin-left: 5px;" value="Buscar">
      </div>
      <div class="row">
        <div class="col-sm-6 col-md-4" style="margin-top: 10px;">
          <a href="/product">
            <div class="thumbnail card">
              <img src="./img/tripelbockcenter.jpg" alt="dádiva triple bock Responsive image" class="imageCardShop">
              <div class="caption card">
                <h4 style="text-align: center; margin-bottom: 35px;">Dádiva Tripel Bock 28</h4>
                <h5 style="text-align: center; margin-bottom: 35px;">Clique para ver mais informações e comprar!</h5>
              </div>
            </div>
          </a>
        </div>
        <div class="col-sm-6 col-md-4" style="margin-top: 10px;">
          <a href="/product">
            <div class="thumbnail card">
              <img src="./img/KudTangerine.jpg" alt="Kud Tangerine" class="imageCardShop">
              <div class="caption card">
                <h4 style="text-align: center; margin-bottom: 35px;">Cerveja Küd Tangerine</h4>
                <h5 style="text-align: center; margin-bottom: 35px;">Clique para ver mais informações e comprar!</h5>
              </div>
            </div>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<% include ./partials/footer %>
